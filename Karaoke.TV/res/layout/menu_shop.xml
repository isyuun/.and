<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_shop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v4.widget.Space
            android:id="@+id/layout_shop_sub_blank_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <Button
            android:id="@+id/btn_shop_sub_ticket"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="4"
            android:background="@drawable/tab_focus_menu"
            android:gravity="center"
            android:text="@string/menu_sub_ticket"
            android:textColor="@android:color/white"
            android:visibility="visible"/>

        <Button
            android:id="@+id/btn_shop_sub_certify"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="4"
            android:background="@drawable/tab_focus_menu"
            android:gravity="center"
            android:text="@string/menu_sub_certify"
            android:textColor="@android:color/white"
            android:visibility="visible"/>

        <android.support.v4.widget.Space
            android:id="@+id/layout_shop_sub_blank_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="24"
            android:orientation="horizontal"/>
    </LinearLayout>

</RelativeLayout>