<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_box_02"
    android:orientation="vertical" >

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="29"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="38"
        android:orientation="horizontal" >

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="66"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="448"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_message_okcancel_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="117"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_message_okcancel_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="45"
        android:orientation="horizontal" >

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="113"
            android:orientation="horizontal" />

        <Button
            android:id="@+id/btn_message_okcancel_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="112"
            android:background="@drawable/pop_btn_01"
            android:text="@string/common_ok"
            android:textColor="@android:color/black" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="horizontal" />

        <Button
            android:id="@+id/btn_message_okcancel_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="112"
            android:background="@drawable/pop_btn_01"
            android:text="@string/common_cancel"
            android:textColor="@android:color/black" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="113"
            android:orientation="horizontal" />
    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="34"
        android:orientation="horizontal" />

</LinearLayout>
