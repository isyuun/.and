<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_search_self_list_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_search_self_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/search_btn_off"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/search_title"
            android:textColor="#ffffff"
            android:textSize="16sp" >
        </Button>

        <EditText
            android:id="@+id/edit_search_self_word"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:background="@drawable/search_input_off_box"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:imeOptions="flagNoExtractUi"
            android:lines="1"
            android:maxLength="10"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:maxLines="1" >
        </EditText>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.8"
            android:orientation="horizontal" >
        </LinearLayout>

        <TextView
            android:id="@+id/txt_search_self_page"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="right|bottom"
            android:textColor="#ffffff"
            android:visibility="invisible" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_search_self_list_tip"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@drawable/search_01_tip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="240"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="62"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1316"
                android:orientation="horizontal" >
            </LinearLayout>

            <Button
                android:id="@+id/btn_purchase_book_search_self"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="260"
                android:background="@drawable/tab_focus_long_off"
                android:text="노래방책 구매하기"
                android:textColor="@android:color/white" >
            </Button>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="44"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="21"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_search_self_list_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/layout_search_self_list_list_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_search_self_number_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="#83D5BE" >
            </TextView>

            <ImageView
                android:id="@+id/img_search_self_icon_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:src="@drawable/common_bullet_note_off" >
            </ImageView>

            <TextView
                android:id="@+id/txt_search_self_title_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center_vertical|left"
                android:textColor="#ffffff" >
            </TextView>

            <TextView
                android:id="@+id/txt_search_self_singer_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:maxLines="1"
                android:textColor="#dddddd" >
            </TextView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_search_self_list_list_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_search_self_number_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="#83D5BE" >
            </TextView>

            <ImageView
                android:id="@+id/img_search_self_icon_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:src="@drawable/common_bullet_note_off" >
            </ImageView>

            <TextView
                android:id="@+id/txt_search_self_title_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center_vertical|left"
                android:textColor="#ffffff" >
            </TextView>

            <TextView
                android:id="@+id/txt_search_self_singer_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:maxLines="1"
                android:textColor="#dddddd" >
            </TextView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_search_self_list_list_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_search_self_number_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="#83D5BE" >
            </TextView>

            <ImageView
                android:id="@+id/img_search_self_icon_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:src="@drawable/common_bullet_note_off" >
            </ImageView>

            <TextView
                android:id="@+id/txt_search_self_title_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center_vertical|left"
                android:textColor="#ffffff" >
            </TextView>

            <TextView
                android:id="@+id/txt_search_self_singer_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:maxLines="1"
                android:textColor="#dddddd" >
            </TextView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_search_self_list_list_4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_search_self_number_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="#83D5BE" >
            </TextView>

            <ImageView
                android:id="@+id/img_search_self_icon_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:src="@drawable/common_bullet_note_off" >
            </ImageView>

            <TextView
                android:id="@+id/txt_search_self_title_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center_vertical|left"
                android:textColor="#ffffff" >
            </TextView>

            <TextView
                android:id="@+id/txt_search_self_singer_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:maxLines="1"
                android:textColor="#dddddd" >
            </TextView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_search_self_list_list_5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_search_self_number_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="#83D5BE" >
            </TextView>

            <ImageView
                android:id="@+id/img_search_self_icon_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:src="@drawable/common_bullet_note_off" >
            </ImageView>

            <TextView
                android:id="@+id/txt_search_self_title_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="center_vertical|left"
                android:textColor="#ffffff" >
            </TextView>

            <TextView
                android:id="@+id/txt_search_self_singer_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:maxLines="1"
                android:textColor="#dddddd" >
            </TextView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>