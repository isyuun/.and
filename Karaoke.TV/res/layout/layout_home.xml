<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- <View -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="match_parent" -->
    <!-- android:background="@drawable/_main_bg" -->
    <!-- android:visibility="invisible" /> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main"
        android:orientation="vertical"
        android:visibility="visible" >

        <include
            android:id="@+id/layout_menu_home"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="13"
            layout="@layout/layout_menu_home"
            android:visibility="visible" />

        <include
            android:id="@+id/layout_home_event_menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/home_event_margin_left"
            android:layout_marginRight="@dimen/home_event_margin_right"
            android:layout_weight="10"
            layout="@layout/layout_home_event_menu"
            android:visibility="visible" />

        <include
            android:id="@+id/layout_home_notice_menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/home_event_margin_left"
            android:layout_marginRight="@dimen/home_event_margin_right"
            android:layout_weight="3"
            layout="@layout/layout_home_notice_menu"
            android:visibility="visible" />
    </LinearLayout>

    <ImageView
        android:id="@+id/bal_sing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/home_event_bal_margin_left"
        android:layout_marginTop="@dimen/home_event_bal_sing_margin_top"
        android:contentDescription="@string/menu_sing"
        android:src="@drawable/bal_sing"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/bal_listen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/home_event_bal_margin_left"
        android:layout_marginTop="@dimen/home_event_bal_listen_margin_top"
        android:contentDescription="@string/menu_listen"
        android:src="@drawable/bal_listen"
        android:visibility="visible" />

</RelativeLayout>