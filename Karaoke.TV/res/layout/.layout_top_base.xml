<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:background="@drawable/common_top_bg_search"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:visibility="visible" >

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txt_top_song_number"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="106"
        android:gravity="center_vertical"
        android:lines="1"
        android:maxLength="5"
        android:text="@string/menu_top_song_num"
        android:textColor="#01C967"
        android:textSize="28sp"
        android:textStyle="bold" />

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:orientation="horizontal" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="633" >

        <include
            android:id="@+id/layout_top_common"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/layout_top_common" />

        <include
            android:id="@+id/layout_top_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/layout_top_search" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_top_guide_01"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="91"
        android:drawableLeft="@drawable/common_btn_home"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:lines="1"
        android:maxLines="1"
        android:text="@string/menu_top_home"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_small"
        android:visibility="visible" />

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:orientation="horizontal"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txt_top_guide_02"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="91"
        android:drawableLeft="@drawable/common_btn_blue"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:lines="1"
        android:maxLines="1"
        android:text="@string/menu_top_search"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_small"
        android:visibility="visible" />

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="30" />

</LinearLayout>