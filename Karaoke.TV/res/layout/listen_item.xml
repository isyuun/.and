<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listen_list_bg"
    android:orientation="vertical" >

    <android.support.v4.widget.Space
        android:id="@+id/layout_listen_item_top_blank"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10" />

    <LinearLayout
        android:id="@+id/layout_listen_item_profile"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="65"
        android:orientation="horizontal" >

        <android.support.v4.widget.Space
            android:id="@+id/layout_listen_item_profile_left_blank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="11" />

        <LinearLayout
            android:id="@+id/layout_listen_item_profile_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="59"
            android:background="@drawable/common_pic_bg"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_listen_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:scaleType="fitXY" />
        </LinearLayout>

        <android.support.v4.widget.Space
            android:id="@+id/layout_listen_item_profile_after_img_blank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8" />

        <LinearLayout
            android:id="@+id/layout_listen_item_profile_recommand_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="21"
            android:orientation="vertical" >

            <android.support.v4.widget.Space
                android:id="@+id/layout_listen_item_profile_recommand_img_blank_top"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="25" />

            <ImageView
                android:id="@+id/img_listen_item_profile_recommand"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="32"
                android:src="@drawable/listen_icon_recomnd_02" />

            <android.support.v4.widget.Space
                android:id="@+id/layout_listen_item_profile_recommand_img_bottom_top"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8" />
        </LinearLayout>

        <android.support.v4.widget.Space
            android:id="@+id/layout_listen_profile_after_recommand_blank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9" />

        <LinearLayout
            android:id="@+id/layout_listen_profile_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="122"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layout_listen_profile_count_listen"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="27"
                android:orientation="horizontal" >

                <android.support.v4.widget.Space
                    android:id="@+id/layout_listen_profile_count_listen_left_blank"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="12" />

                <LinearLayout
                    android:id="@+id/layout_listen_profile_count_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|right"
                    android:layout_weight="77"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txt_listen_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="#B2B3CD"
                        android:textSize="15sp" />
                </LinearLayout>

                <android.support.v4.widget.Space
                    android:id="@+id/layout_listen_profile_count_listen_mid_blank"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />

                <ImageView
                    android:id="@+id/img_listen_item_profile_headset"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="19"
                    android:src="@drawable/listen_icon_listener" />

                <android.support.v4.widget.Space
                    android:id="@+id/layout_listen_profile_count_listen_right_blank"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9" />
            </LinearLayout>

            <android.support.v4.widget.Space
                android:id="@+id/layout_listen_profile_count_mid_blank"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2" />

            <LinearLayout
                android:id="@+id/layout_listen_profile_count_recommand"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="42"
                android:gravity="center_vertical|left"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_listen_recommand"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#70CEE8"
                    android:textSize="26sp" />
            </LinearLayout>

            <android.support.v4.widget.Space
                android:id="@+id/layout_listen_profile_count_bottom_blank"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.widget.Space
        android:id="@+id/layout_listen_item_mid_blank"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6" />

    <LinearLayout
        android:id="@+id/layout_listen_item_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="19"
        android:orientation="horizontal" >

        <android.support.v4.widget.Space
            android:id="@+id/layout_listen_item_song_info_title_left_blank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="17" />

        <TextView
            android:id="@+id/txt_listen_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="219"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>

    <android.support.v4.widget.Space
        android:id="@+id/layout_listen_item_song_info_blank"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <LinearLayout
        android:id="@+id/layout_listen_item_singer_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="17"
        android:orientation="horizontal" >

        <android.support.v4.widget.Space
            android:id="@+id/layout_listen_item_singer_nickname_left_blank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="17"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/layout_listen_item_singer_nickname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="135"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_listen_nickname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#BBBBBB"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_listen_item_singer_day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="75"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_listen_day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#70CEE8"
                android:textSize="12sp" />
        </LinearLayout>

        <android.support.v4.widget.Space
            android:id="@+id/layout_listen_item_singer_day_right_blank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9" />
    </LinearLayout>

    <android.support.v4.widget.Space
        android:id="@+id/layout_listen_item_bottom_blank"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7" />

</LinearLayout>