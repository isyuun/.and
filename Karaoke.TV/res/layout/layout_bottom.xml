<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_bottom"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/common_footer_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:visibility="visible">

    <ImageView
        android:id="@+id/img_ky_logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="12.5"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/ky_logo"
        android:visibility="visible"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="57.5"
        android:gravity="center_vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/txt_bottom_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/txt_bottom_guide_01"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingRight="10dp"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txt_bottom_guide_01"
            android:layout_width="@dimen/txt_bottom_guide_01"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/txt_bottom_guide_02"
            android:drawableLeft="@drawable/btn_menu"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:lines="1"
            android:maxLines="1"
            android:text="@string/menu_bottom_open"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/txt_bottom_guide_02"
            android:layout_width="@dimen/txt_bottom_guide_02"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/txt_bottom_guide_03"
            android:drawableLeft="@drawable/common_btn_yellow_play_pause"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:lines="1"
            android:maxLines="1"
            android:text="@string/menu_bottom_stop_song"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/txt_bottom_guide_03"
            android:layout_width="@dimen/txt_bottom_guide_03"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:lines="1"
            android:maxLines="1"
            android:text="@string/common_ok"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="visible"/>

    </RelativeLayout>

</LinearLayout>