<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/listen_list_bg"
                tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/img_focus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/listen_focus_bg"
        android:visibility="invisible"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img_listen_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@drawable/common_pic_bg"
            android:padding="2dp"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/trans_black"
            android:orientation="vertical"
            android:padding="3dp">

            <TextView
                android:id="@+id/txt_listen_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="1.0"
                android:ellipsize="middle"
                android:maxLines="1"
                android:text="@string/hint_listen_title"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/txt_listen_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="1.0"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/hint_listen_nickname"
                android:textColor="#BBBBBB"
                android:textSize="12sp"
                />
        </LinearLayout>

