<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/listening"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="52"
        android:orientation="horizontal"/>

    <include
        android:id="@+id/layout_listen_profile"
        layout="@layout/layout_listen_profile"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="110"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75"
        android:orientation="horizontal"/>

    <RelativeLayout
        android:id="@+id/layout_listen_play_sing_on"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="170"
        android:orientation="horizontal"
        android:visibility="visible">

        <!--<android.support.v4.widget.Space-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="491"-->
        <!--android:orientation="horizontal" />-->

        <Button
            android:id="@+id/btn_listen_play_sing_on"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="168"
            android:background="@drawable/listen_play_sing_on"
            android:visibility="visible"/>

        <android.support.v4.widget.Space
            android:id="@+id/spc_listen_play_sing_on"
            android:layout_width="0dp"
            android:layout_height="@dimen/spc_listen_play_sing_on"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/txt_listen_play_sing_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/spc_listen_play_sing_on"
            android:drawableLeft="@drawable/common_btn_yellow_play_pause"
            android:paddingLeft="@dimen/txt_listen_play_sing_on"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:visibility="visible"/>

        <!--<android.support.v4.widget.Space-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="491"-->
        <!--android:orientation="horizontal" />-->
    </RelativeLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="240"
        android:orientation="horizontal"/>

</LinearLayout>