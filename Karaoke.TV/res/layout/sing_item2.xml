<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_focus"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_focus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/list_focus_on"
        android:visibility="invisible"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_rank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:text="@string/hint_song_rank"
            android:textColor="@color/solid_text"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/txt_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/hint_song_number"
            android:textColor="@color/solid_text"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/ico_note"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:contentDescription="@string/hint_song_icon"
            android:gravity="center_vertical|end"
            android:src="@drawable/common_bullet_note_off"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/ico_favor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:contentDescription="@string/hint_song_icon"
            android:gravity="center_vertical|end"
            android:src="@drawable/common_bullet_favor_off"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/ico_new"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:contentDescription="@string/hint_song_icon"
            android:gravity="center_vertical|end"
            android:src="@drawable/common_bullet_new_off"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/hint_song_title"
            android:textColor="#ffffff"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/txt_singer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.4"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/hint_song_singer"
            android:textColor="#dddddd"
            android:visibility="visible"/>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="horizontal"
            android:visibility="visible"/>
    </LinearLayout>

</RelativeLayout>