<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_footer_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_ky_logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/ky_logo" />

    <TextView
        android:id="@+id/txt_bottom_product"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="11"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingRight="10dp"
        android:ellipsize="end"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_bottom_guide_01"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="2.2"
        android:drawableLeft="@drawable/btn_menu"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:lines="1"
        android:maxLines="1"
        android:text="@string/menu_bottom_open"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txt_bottom_guide_02"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="2.2"
        android:drawableLeft="@drawable/common_btn_yellow_play_pause"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:lines="1"
        android:maxLines="1"
        android:text="@string/menu_bottom_stop_song"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txt_bottom_guide_03"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:text="@string/common_ok"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="visible" />

    <!-- <android.support.v4.widget.Space -->
    <!-- android:layout_width="0dp" -->
    <!-- android:layout_height="0dp" -->
    <!-- android:layout_weight="0.2" -->
    <!-- android:visibility="invisible" /> -->

</LinearLayout>