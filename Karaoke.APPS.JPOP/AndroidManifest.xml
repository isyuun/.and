    <!-- targetSdkVersion:어플프로젝트에서한다...구찮다. -->
    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="22" />

    <!-- 푸시관련 Permissions START -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="kr.kymedia.karaoke.jpop.permission.C2D_MESSAGE" />

    <permission
        android:name="kr.kymedia.karaoke.jpop.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <!-- 푸시관련 Permissions END -->

    <application
        android:name="kr.kymedia.karaoke.app._BaseApplication"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:logo="@drawable/tit_logo"
        android:theme="@style/AppTheme" >

        <!-- 8) TNK팩토리 - N -->
        <activity
            android:name="com.tnkfactory.ad.AdWallActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name="com.tnkfactory.ad.AdMediaActivity"
            android:screenOrientation="landscape" />

        <meta-data
            android:name="tnkad_app_id"
            android:value="70a09020-0061-932a-a239-160002040e04" />

        <!-- 푸시관련(GCM) Receiver START -->
        <!--
          BroadcastReceiver that will receive intents from GCM
          services and handle them to the custom IntentService.

          The com.google.android.c2dm.permission.SEND permission is necessary
          so only GCM services can send data messages for the app.
        -->
        <receiver
            android:name="._GCMReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <!-- <action android:name="com.google.android.c2dm.intent.REGISTRATION" /> -->
                <category android:name="kr.kymedia.karaoke.jpop" />
            </intent-filter>
        </receiver>
        <!-- 푸시관련(GCM) Receiver END -->


        <!-- 푸시관련(GCM) GCMIntentService START -->
        <!--
          Application-specific subclass of GCMBaseIntentService that will
          handle received messages.

          By default, it must be named .GCMIntentService, unless the
          application uses a custom BroadcastReceiver that redefines its name.
        -->
        <service android:name="._GCMIntentService" />
        <!-- 푸시관련(GCM) GCMIntentService END -->


        <!-- Phone Call Receiver -->


        <!-- SearchRecent SearchRecentSuggestionsProvider -->
        <provider
            android:name="kr.kymedia.karaoke.jpop.SearchRecentProvider"
            android:authorities="kr.kymedia.karaoke.jpop.SearchRecentProvider" />
