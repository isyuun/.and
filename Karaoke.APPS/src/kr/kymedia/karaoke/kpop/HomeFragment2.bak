	@Override
	public void onKPnnnnResult(int what, String p_opcode, String r_code, String r_message,
			String r_info) {


		KPnnnnResult(what, p_opcode, r_code, r_message, r_info);

		if (what != IKaraoke2.STATE_DATA_QUERY_START) {
			// KP_0002 동적메인메뉴 요청
			if (("KP_0002").equalsIgnoreCase(p_opcode)) {

				KPItem info = KP_nnnn.getInfo();

				putLogin(info);

				if (info == null) {
					info = new KPItem();
					KP_nnnn.setInfo(info);
				}

				KPnnnn();

				if (what == IKaraoke2.STATE_DATA_QUERY_SUCCESS && ("00000").equalsIgnoreCase(r_code)) {
				}
			}
		}

	}

	@Override
	public void KPnnnn() {
		if (IKaraoke2.DEBUG) Log2.e(__CLASSNAME__, getMethodName() + KP_nnnn);

		if (KP_nnnn.getLists() == null) {
			return;
		}

		// test
		for (int i = 0; i < KP_nnnn.getListCount(); i++) {
			KPItem item = KP_nnnn.getList(i);

			if (item == null) {
				continue;
			}

			if (i > MENU_BUTTONS.length - 1) {
				continue;
			}

			View v = findViewById(MENU_BUTTONS[i]);

			// String m1 = item.getString("m1");
			// String m2 = item.getString("m1");
			// if (!TextUtil.isEmpty(m1) && !TextUtil.isEmpty(m2)) {
			// putURLImage(mContext, (ImageView) v, item.getString("url_img"),
			// false);
			// } else {
			// v.setVisibility(View.GONE);
			// }
			putURLImage(mContext, (ImageView) v, item.getValue("url_img"),
					false, R.drawable.ic_menu_01);
		}

		super.KPnnnn();
	}

	@Override
	public void onClick(View v) {

		String vn = getResourceEntryName(v.getId());
		KP_index = getMenuTilesIndex(v.getId());
		String cn = v.getClass().getSimpleName();
		if (IKaraoke2.DEBUG) Log2.i(__CLASSNAME__, getMethodName() + KP_index + " " + vn + ", " + cn);

		if (getBaseActivity().isLoading()) {
			return;
		}

		KPItem info = KP_nnnn.getInfo();
		KPItem list = KP_nnnn.getList(KP_index);
		ArrayList<KPItem> lists = KP_nnnn.getLists();

		if (info == null) {
			getApp().showDataError(__CLASSNAME__, getMethodName(), "info", info);
			return;
		}

		if (list == null) {
			getApp().showDataError(__CLASSNAME__, getMethodName(), "list", list);
			return;
		}

		// if (lists == null) {
		// getApp().showDataError(__CLASSNAME__, getMethodName(), "lists", lists);
		// return;
		// }

		String menu_id = list.getValue("menu_id");
		String menu_name = list.getValue("menu_name");

		if (("true").equalsIgnoreCase(list.getValue("refresh"))) {
			getApp().isRefresh = true;
		} else {
			getApp().isRefresh = false;
		}

		// try {
		// if (IKaraoke2.DEBUG)Log.e(__CLASSNAME__, "info - " + info);
		// if (IKaraoke2.DEBUG)Log.e(__CLASSNAME__, "list - " + list);
		// if (IKaraoke2.DEBUG)Log.e(__CLASSNAME__, "lists - " + lists);
		// } catch (Exception e) {
		// // TODO Auto-generated catch block
		// //e.printStackTrace();
		// }
		try {
			if (IKaraoke2.DEBUG) Log2.e(__CLASSNAME__, "list - " + list.toString(2));
			// if (IKaraoke2.DEBUG)Log.w(__CLASSNAME__, "list - " + list.toString(2));
			if (IKaraoke2.DEBUG) Log2.w(__CLASSNAME__, "info - " + info.toString(2));
		} catch (Exception e) {
			// TODO Auto-generated catch block
			// e.printStackTrace();
		}

		if (!TextUtil.isEmpty(menu_id)) {
			if (menu_id.contains("menu_")) {
				onOptionsItemSelected(getResource(menu_id, "id"), menu_name, true);
			} else if (menu_id.contains("context_")) {
				// onContextItemSelected(mContext, getResource(menu_id, "id"), info, list, true);
				onContextItemSelected(getResource(menu_id, "id"), KP_nnnn, KP_index, true);
			}
		}

		super.onClick(v);
	}

	public int getMenuTilesIndex(int id) {
		int index = 0;

		for (int i = 0; i < MENU_BUTTONS.length; i++) {
			if (id == MENU_BUTTONS[i]) {
				index = i;
				break;
			}
		}

		return index;
	}

