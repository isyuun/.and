<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/item"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/list_selector_default"
              android:orientation="vertical"
              android:gravity="center">

    <RelativeLayout
        android:background="?attr/listViewStyleItemBackstroke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:padding="@dimen/padding_medium"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <include
                layout="@layout/include_feel_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/feel_text"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:ems="10"
                    android:lines="2"
                    android:maxLines="2"
                    android:text="@string/hint_feel_text"/>

                <kr.kymedia.karaoke.widget._ImageButton
                    android:id="@+id/btn_listen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:background="@drawable/bg_button_64x64"
                    android:contentDescription="@string/btn_title_play"
                    android:onClick="onClick"
                    android:padding="@dimen/padding_tiny"
                    android:scaleType="center"
                    android:src="@drawable/ic_listen"
                    android:visibility="visible"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>