<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/solid_gray"
	android:gravity="center_vertical"
	android:orientation="horizontal"
	android:paddingLeft="@dimen/padding_input_bar"
	android:paddingRight="@dimen/padding_input_bar" >

	<TextView
		android:id="@+id/txt_profile_nickname"
		style="@style/TextMedium"
		android:layout_width="wrap_content"
		android:layout_height="@dimen/height_profile_bar"
		android:gravity="center"
		android:text="@string/hint_profile_nickname"
		android:textColor="@color/solid_black" />

	<kr.kymedia.karaoke.widget._ImageView
		android:id="@+id/img_profile_country"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:layout_marginLeft="@dimen/margin_input_bar"
		android:contentDescription="@string/hint_profile_country"
		android:src="@drawable/img_flag_kr" />

	<!-- <TextView -->
	<!-- android:id="@+id/txt_profile_country" -->
	<!-- style="@style/TextLargeThick" -->
	<!-- android:layout_width="20dp" -->
	<!-- android:layout_height="20dp" -->
	<!-- android:drawablePadding="@dimen/padding_input_bar" -->
	<!-- android:drawableRight="@drawable/img_flag_kr" -->
	<!-- android:text="" /> -->

	<View
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_weight="1.0" />

	<kr.kymedia.karaoke.widget._ImageView
		android:id="@+id/img_top_today"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:contentDescription="@drawable/img_top_today"
		android:src="@drawable/img_top_today"
		android:visibility="invisible" />

	<TextView
		android:id="@+id/txt_profile_hit"
		style="@style/TextSmall"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/margin_input_bar"
		android:text="@string/hint_item_heart"
		android:textColor="@color/solid_black" />

	<TextView
		android:id="@+id/txt_profile_separator"
		style="@style/TextLarge"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/margin_input_bar"
		android:text="@string/hint_item_separator"
		android:textColor="@color/solid_black" />

	<TextView
		android:id="@+id/txt_profile_heart"
		style="@style/TextSmall"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/margin_input_bar"
		android:drawableLeft="@drawable/img_list_point_02"
		android:gravity="center"
		android:text="@string/hint_item_heart"
		android:textColor="@color/solid_pink" />

</LinearLayout>