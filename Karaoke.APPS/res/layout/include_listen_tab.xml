<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_medium" >

        <Button
            android:id="@+id/tab_menu_listen_top100"
            style="@style/TextXLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:background="@drawable/btn_tab_left_01"
            android:onClick="onClick"
            android:text="@string/menu_listen_top100" />

        <Button
            android:id="@+id/tab_menu_listen_timeline"
            style="@style/TextXLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:background="@drawable/btn_tab_right_01"
            android:maxLines="1"
            android:minLines="1"
            android:onClick="onClick"
            android:text="@string/menu_listen_timeline" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/solid_orange" />

</LinearLayout>