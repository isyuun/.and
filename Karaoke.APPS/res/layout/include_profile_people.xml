<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/solid_black"
    android:padding="@dimen/padding_input_bar" >

    <TextView
        android:id="@+id/txt_profile_comment"
        style="@style/TextMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_profile_nickname"
        android:background="@drawable/dlg_top_message_01"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:paddingLeft="@dimen/padding_input_bar"
        android:paddingRight="@dimen/padding_input_bar"
        android:text="@string/hint_profile_commet" />

    <TextView
        android:id="@+id/txt_profile_nickname"
        style="@style/TextLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_profile_comment"
        android:layout_marginLeft="@dimen/margin_input_bar"
        android:layout_toRightOf="@+id/linearLayout1"
        android:text="@string/hint_profile_nickname" />

    <TextView
        android:id="@+id/TextView01"
        style="@style/TextLargeThick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_profile_nickname"
        android:layout_below="@+id/txt_profile_nickname"
        android:text="@string/hint_profile_birthday"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_profile_birthday"
        style="@style/TextLargeThick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/TextView01"
        android:layout_marginLeft="@dimen/margin_input_bar"
        android:layout_toRightOf="@id/TextView01"
        android:text="@string/hint_profile_date"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_profile_country"
        style="@style/TextLargeThick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_profile_nickname"
        android:layout_below="@id/TextView01"
        android:layout_marginTop="@dimen/margin_small"
        android:text="@string/hint_profile_country" />

    <kr.kymedia.karaoke.widget._ImageView
        android:id="@+id/img_profile_country"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/txt_profile_country"
        android:layout_marginLeft="@dimen/margin_input_bar"
        android:layout_toRightOf="@id/txt_profile_country"
        android:contentDescription="@drawable/img_flag_kr"
        android:src="@drawable/img_flag_kr" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <kr.kymedia.karaoke.widget._ImageView
            android:id="@+id/img_profile_image"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:contentDescription="@string/hint_profile_image"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_menu_01" />

        <!-- <kr.kymedia.karaoke.widget.ImageView -->
        <!-- android:id="@+id/img_profile_image" -->
        <!-- android:layout_width="90dp" -->
        <!-- android:layout_height="100dp" -->
        <!-- android:layout_gravity="center" -->
        <!-- android:contentDescription="@string/hint_profile_image" -->
        <!-- android:padding="2dp" -->
        <!-- android:scaleType="fitXY" -->
        <!-- android:src="@drawable/ic_menu_01" /> -->
    </LinearLayout>

    <Button
        android:id="@+id/btn_profile_edit"
        style="@style/TextLarge"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_profile_country"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_profile_comment"
        android:background="@drawable/btn_normal_01"
        android:clickable="true"
        android:contentDescription="@string/context_title_profile_edit"
        android:maxLines="1"
        android:onClick="onClick"
        android:text="@string/btn_title_edit"
        android:textColor="@color/solid_white"
        android:textSize="@dimen/text_medium" />

    <TextView
        android:id="@+id/txt_profile_hit"
        style="@style/TextTinyBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout1"
        android:layout_alignLeft="@+id/txt_profile_country"
        android:layout_below="@+id/txt_profile_country"
        android:drawableLeft="@drawable/img_list_playbar_01"
        android:drawablePadding="@dimen/margin_tiny"
        android:gravity="center"
        android:text="@string/hint_item_heart" />

    <TextView
        android:id="@+id/txt_profile_heart"
        style="@style/TextTinyBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_profile_hit"
        android:layout_alignTop="@+id/txt_profile_hit"
        android:layout_marginLeft="@dimen/margin_xlarge"
        android:layout_toRightOf="@+id/txt_profile_hit"
        android:drawableLeft="@drawable/img_list_heart_01"
        android:drawablePadding="3dp"
        android:gravity="center"
        android:text="@string/hint_item_heart" />

    <TextView
        android:id="@+id/txt_profile_follow"
        style="@style/TextTinyBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_profile_hit"
        android:layout_alignTop="@+id/txt_profile_hit"
        android:layout_marginLeft="@dimen/margin_xlarge"
        android:layout_toRightOf="@+id/txt_profile_heart"
        android:drawableLeft="@drawable/img_list_star_01_off"
        android:drawablePadding="3dp"
        android:gravity="center"
        android:text="@string/hint_item_heart" />

</RelativeLayout>