<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/include_player_people_baloon"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- this expands to fill the empty space if needed -->

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/txt_comment_05"
            style="@style/TextMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dlg_bottom_message_01"
            android:drawableLeft="@drawable/ic_menu_01"
            android:drawableRight="@drawable/btn_top_del"
            android:hint="@string/hint_profile_commet"
            android:paddingLeft="@dimen/padding_input_bar"
            android:paddingRight="@dimen/padding_input_bar" />

        <TextView
            android:id="@+id/txt_comment_04"
            style="@style/TextMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dlg_bottom_message_02"
            android:drawableLeft="@drawable/ic_menu_01"
            android:drawableRight="@drawable/btn_top_del"
            android:hint="@string/hint_profile_commet"
            android:paddingLeft="@dimen/padding_input_bar"
            android:paddingRight="@dimen/padding_input_bar" />

        <TextView
            android:id="@+id/txt_comment_03"
            style="@style/TextMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dlg_bottom_message_01"
            android:drawableLeft="@drawable/ic_menu_01"
            android:drawableRight="@drawable/btn_top_del"
            android:hint="@string/hint_profile_commet"
            android:paddingLeft="@dimen/padding_input_bar"
            android:paddingRight="@dimen/padding_input_bar" />

        <TextView
            android:id="@+id/txt_comment_02"
            style="@style/TextMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dlg_bottom_message_02"
            android:drawableLeft="@drawable/ic_menu_01"
            android:drawableRight="@drawable/btn_top_del"
            android:hint="@string/hint_profile_commet"
            android:paddingLeft="@dimen/padding_input_bar"
            android:paddingRight="@dimen/padding_input_bar" />

        <TextView
            android:id="@+id/txt_comment_01"
            style="@style/TextMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dlg_bottom_message_01"
            android:drawableLeft="@drawable/ic_menu_01"
            android:drawableRight="@drawable/btn_top_del"
            android:hint="@string/hint_profile_commet"
            android:paddingLeft="@dimen/padding_input_bar"
            android:paddingRight="@dimen/padding_input_bar" />
    </LinearLayout>

</ScrollView>