<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view2"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include
            android:id="@+id/include_feel_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/include_feel_title" />
    </LinearLayout>

    <ViewSwitcher
        android:id="@+id/viewSwitcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view0" >

        <include
            android:id="@+id/include_player_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_large_play_bar"
            layout="@layout/include_player_title" />

        <include
            android:id="@+id/include_player_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/include_player_menu" />
    </ViewSwitcher>

    <LinearLayout
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view2"
        android:orientation="vertical"
        android:visibility="gone" >

        <include
            android:id="@+id/include_player_people_baloon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            layout="@layout/include_player_people_baloon" />

        <include
            android:id="@+id/include_player_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/include_player_people" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view2"
        android:orientation="vertical"
        android:visibility="gone" >

        <include
            android:id="@+id/include_player_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/include_player_read" />
    </LinearLayout>

    <kr.kymedia.karaoke.widget.MonkeyListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/include_reply"
        android:layout_below="@+id/view2"
        android:divider="?attr/listViewStyleLineBackground"
        android:dividerHeight="1dp" />

    <include
        android:id="@+id/include_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        layout="@layout/include_reply" />

    <RelativeLayout
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_player_control_bar_01" >

        <include
            android:id="@+id/include_player_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/include_player_bar2" />
    </RelativeLayout>

</RelativeLayout>