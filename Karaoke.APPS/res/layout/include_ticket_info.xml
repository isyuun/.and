<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ticket_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/TextMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_tiny"
                android:layout_weight="0.0"
                android:drawableLeft="@drawable/img_list_circle"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/title_ticket_goodsname_info" />

            <TextView
                android:id="@+id/txt_ticket_info"
                style="@style/TextMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_tiny"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:textColor="@color/solid_orange" />

            <!-- <Button -->
            <!-- android:id="@+id/btn_ticket_repay" -->
            <!-- style="@style/TextXTextXLargeBlack" -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:layout_margin="@dimen/margin_tiny" -->
            <!-- android:background="@drawable/btn_normal_02" -->
            <!-- android:onClick="onClick" -->
            <!-- android:padding="@dimen/padding_button_large" -->
            <!-- android:text="@string/title_ticket_goodsname_repay" -->
            <!-- /> -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/TextMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_tiny"
                android:drawableLeft="@drawable/img_list_circle"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/title_ticket_goodsname_pay_date" />

            <TextView
                android:id="@+id/txt_ticket_pay_date"
                style="@style/TextMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_tiny"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:textColor="@color/solid_orange" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/TextMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_tiny"
                android:drawableLeft="@drawable/img_list_circle"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/title_ticket_goodsname_valid_date" />

            <TextView
                android:id="@+id/txt_ticket_valid_date"
                style="@style/TextMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_tiny"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:textColor="@color/solid_orange" />
        </LinearLayout>

        <TextView
            style="@style/TextMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/img_list_circle"
            android:paddingBottom="@dimen/padding_medium"
            android:paddingTop="@dimen/padding_medium"
            android:text="@string/summary_ticket_product_info" />
    </LinearLayout>

    <!-- <View -->
    <!-- android:id="@+id/line_light" -->
    <!-- android:layout_width="wrap_content" -->
    <!-- android:layout_height="1dp" -->
    <!-- android:background="?attr/listViewStyleLineBackground" /> -->

    <TextView
        android:id="@+id/ticket_no_info"
        style="@style/TextMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/img_list_circle"
        android:paddingBottom="@dimen/padding_medium"
        android:paddingTop="@dimen/padding_medium"
        android:text="@string/summary_ticket_product_no_info"
        android:textColor="@color/solid_orange"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/listViewStyleLineBackground" />

</LinearLayout>