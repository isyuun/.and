<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout_eula"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/chk_setting_eula3"
        style="@style/TextLarge"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_input_box"
        android:layout_marginTop="@dimen/margin_medium"
        android:visibility="visible"/>

    <CheckBox
        android:id="@+id/chk_setting_eula4"
        android:layout_below="@id/chk_setting_eula3"
        style="@style/TextLarge"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_input_box"
        android:layout_marginTop="@dimen/margin_medium"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/txt_setting_eula3"
        android:text="@string/category_setting_eula3"
        android:layout_toRightOf="@+id/chk_setting_eula3"
        android:layout_alignTop="@+id/chk_setting_eula3"
        style="@style/TextMedium"
        android:layout_margin="@dimen/margin_input_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector_trans"
        android:drawableRight="@drawable/btn_list_arrow"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/solid_orange"
        android:textStyle="bold"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/txt_setting_eula4"
        android:text="@string/category_setting_eula4"
        android:layout_toRightOf="@+id/chk_setting_eula4"
        android:layout_alignTop="@+id/chk_setting_eula4"
        android:layout_below="@id/txt_setting_eula3"
        style="@style/TextMedium"
        android:layout_margin="@dimen/margin_input_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector_trans"
        android:drawableRight="@drawable/btn_list_arrow"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/solid_orange"
        android:textStyle="bold"
        android:visibility="visible"/>

</RelativeLayout>
