<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >

		<TextView
			android:id="@+id/txt_ticket_product_detail"
			style="@style/TextXLarge"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:drawableLeft="@drawable/img_ticket"
			android:gravity="center_vertical"
			android:padding="@dimen/padding_input_bar"
			android:text="@string/category_ticket_product" />

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="?attr/listViewStyleLineBackground" />

		<View
			android:layout_width="match_parent"
			android:layout_height="2dp"
			android:background="@color/solid_orange" />
	</LinearLayout>

	<include
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		layout="@layout/include_ticket_info" />

</LinearLayout>