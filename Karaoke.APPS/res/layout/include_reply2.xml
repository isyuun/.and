<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/include_reply"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_default"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_singinput"
        android:orientation="horizontal"
        android:paddingRight="@dimen/padding_medium" >

        <EditText
            android:id="@+id/edt_reply_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_xlarge"
            android:layout_weight="1.0"
            android:background="@android:color/transparent"
            android:ems="10"
            android:gravity="top|left"
            android:hint="@string/hint_profile_commet"
            android:textSize="@dimen/text_large" />

        <kr.kymedia.karaoke.widget._ImageButton
            android:id="@+id/btn_reply_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_small"
            android:background="@drawable/bg_button_64x64"
            android:contentDescription="@string/btn_title_message_reply"
            android:src="@drawable/ic_write" />
    </LinearLayout>

</LinearLayout>