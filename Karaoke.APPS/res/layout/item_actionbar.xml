<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center" >

    <View
        android:id="@+id/left_span"
        android:layout_width="@dimen/margin_medium"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/left_span"
        android:orientation="vertical" >

        <View
            android:id="@+id/upper_span"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_medium"
            android:visibility="visible" />

        <TextView
            android:id="@+id/main_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/hint_item_title"
            android:textColor="@color/solid_white_choco"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/hint_item_name"
            android:textColor="@color/solid_white_choco"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/lower_span"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_medium"
            android:visibility="visible" />
    </LinearLayout>

</RelativeLayout>