<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:fillViewport="true"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/con_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible" >

            <kr.kymedia.karaoke.widget._ImageView
                android:id="@+id/img_popup"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/txt_popup"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/btn_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center" >

        <Button
            android:id="@+id/btn_confirm"
            style="@style/TextLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_tiny"
            android:layout_weight="1.0"
            android:background="@drawable/btn_normal_01"
            android:clickable="true"
            android:maxLines="1"
            android:onClick="onClick"
            android:text="@string/btn_title_confirm"
            android:textColor="@color/solid_white"
            android:textSize="@dimen/text_medium" />

        <Button
            android:id="@+id/btn_close"
            style="@style/TextLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_tiny"
            android:layout_weight="1.0"
            android:background="@drawable/btn_normal_01"
            android:clickable="true"
            android:maxLines="1"
            android:onClick="onClick"
            android:text="@string/btn_title_close"
            android:textColor="@color/solid_white"
            android:textSize="@dimen/text_medium" />
    </LinearLayout>

</LinearLayout>