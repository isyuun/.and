<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ToggleButton
        android:id="@+id/scope_selection_toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_default"
        android:textColor="@android:color/primary_text_light"
        android:textOff="plus.login scope"
        android:textOn="profile scope"
        android:visibility="invisible"/>

    <!-- android:background="@drawable/common_signin_btn_text_dark" -->
    <Button
        android:id="@+id/google_plus_sign_out_button"
        style="@style/TextXLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_title_logout"
        android:textColor="@color/solid_white"
        android:background="@drawable/btn_normal_counter_01"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <com.google.android.gms.common.SignInButton
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/google_plus_sign_in_button"
        style="@style/TextXLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_normal_counter_01"
        android:textColor="@color/solid_white"
        android:textStyle="bold"
        android:visibility="visible" />

</RelativeLayout>