<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/actionbar_backgroundsplit_bak1"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center" >

        <kr.kymedia.karaoke.widget._ImageButton
            android:id="@+id/menu_feel"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_button"
            android:contentDescription="@string/menu_feel"
            android:longClickable="true"
            android:onClick="onMenuClick"
            android:src="@drawable/ic_feel" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center" >

        <kr.kymedia.karaoke.widget._ImageButton
            android:id="@+id/menu_audition"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_button"
            android:contentDescription="@string/menu_audition"
            android:longClickable="true"
            android:onClick="onMenuClick"
            android:src="@drawable/ic_audition" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center" >

        <kr.kymedia.karaoke.widget._ImageButton
            android:id="@+id/menu_listen"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_button"
            android:contentDescription="@string/menu_listen"
            android:longClickable="true"
            android:onClick="onMenuClick"
            android:src="@drawable/ic_listen" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center" >

        <kr.kymedia.karaoke.widget._ImageButton
            android:id="@+id/menu_sing"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_button"
            android:contentDescription="@string/menu_sing"
            android:longClickable="true"
            android:onClick="onMenuClick"
            android:src="@drawable/ic_sing" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center" >

        <kr.kymedia.karaoke.widget._ImageButton
            android:id="@+id/menu_shop"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_button"
            android:contentDescription="@string/menu_shop"
            android:longClickable="true"
            android:onClick="onMenuClick"
            android:src="@drawable/ic_ticket" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center" >

        <kr.kymedia.karaoke.widget._ImageButton
            android:id="@+id/menu_more"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_button"
            android:contentDescription="@string/menu_more"
            android:longClickable="true"
            android:onClick="onMenuClick"
            android:src="@drawable/ic_more" />
    </LinearLayout>

</LinearLayout>