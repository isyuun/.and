<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector_default"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:background="@drawable/list_selector_default"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_tiny"
        android:paddingRight="@dimen/padding_tiny" >

        <kr.kymedia.karaoke.widget._ImageView
            android:id="@+id/image1"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:contentDescription="@string/hint_item_image"
            android:src="@drawable/ic_holic100" />

        <TextView
            android:id="@+id/title"
            style="@style/TextMedium"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/title_ticket_goodsname_20song" />

        <kr.kymedia.karaoke.widget._ImageView
            android:id="@+id/image2"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:contentDescription="@string/name_item_star"
            android:src="@drawable/ic_holic" />

        <TextView
            android:id="@+id/price"
            style="@style/TextMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/hint_ticket_product_price" />

        <!-- <TextView -->
        <!-- android:id="@+id/unit" -->
        <!-- style="@style/TextXLargeGray" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:gravity="center_vertical" -->
        <!-- android:text="@string/hint_ticket_product_KRW" -->
        <!-- android:textSize="20sp" -->
        <!-- android:visibility="gone" /> -->

        <kr.kymedia.karaoke.widget._ImageView
            android:id="@+id/image3"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:contentDescription="@string/hint_item_image"
            android:src="@drawable/ic_coupon" />

        <Button
            android:id="@+id/button"
            style="@style/TextMedium"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_margin="@dimen/margin_input_bar"
            android:background="@drawable/btn_normal_02"
            android:onClick="onListItemClick"
            android:padding="@dimen/padding_button_large"
            android:text="@string/title_ticket_goodsname_iap_msg_buy"
            android:textColor="@color/text_black"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/line_dark"
        android:layout_width="wrap_content"
        android:layout_height="2dp" />

    <!-- <View -->
    <!-- android:id="@+id/line_light" -->
    <!-- android:layout_width="wrap_content" -->
    <!-- android:layout_height="1dp" -->
    <!-- android:background="?attr/listViewStyleLineBackground" /> -->

</LinearLayout>