<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/include_audition_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_selector_default"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_small" >

    <include
        android:id="@+id/item_audition_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/item_audition_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_input_bar"
        android:paddingRight="@dimen/padding_input_bar" >

        <Button
            android:id="@+id/audition_button_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_normal_counter_01"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible"
            />

        <Button
            android:id="@+id/audition_button_foreground"
            style="@style/TextLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:drawablePadding="@dimen/padding_large"
            android:drawableRight="@drawable/ic_action_mic_on"
            android:gravity="center"
            android:maxLines="1"
            android:onClick="onClick"
            android:text="@string/hint_item_title"
            android:textColor="@color/solid_white"
            android:textSize="@dimen/text_xlarge"
            android:visibility="visible"
            />
    </RelativeLayout>

</LinearLayout>