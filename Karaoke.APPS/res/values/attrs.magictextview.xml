<?xml version="1.0" encoding="utf-8"?>
<resources>
	<declare-styleable name="MagicTextView">
		<attr name="MagicTextView.innerShadowColor" format="color"/>
		<attr name="MagicTextView.innerShadowRadius" format="float"/>
		<attr name="MagicTextView.innerShadowDx" format="float"/>
		<attr name="MagicTextView.innerShadowDy" format="float"/>
		
		<attr name="MagicTextView.outerShadowColor" format="color"/>
		<attr name="MagicTextView.outerShadowRadius" format="float"/>
		<attr name="MagicTextView.outerShadowDx" format="float"/>
		<attr name="MagicTextView.outerShadowDy" format="float"/>
		
		<attr name="MagicTextView.typeface" format="string" />
		
		<attr name="MagicTextView.foreground" format="reference|color"/>
		<attr name="MagicTextView.background" format="reference|color"/>
		
		<attr name="MagicTextView.strokeWidth" format="float" />
		<attr name="MagicTextView.strokeMiter" format="float" />
		<attr name="MagicTextView.strokeColor" format="color" />
		<attr name="MagicTextView.strokeJoinStyle">
		    <enum name="miter" value="0" />
		    <enum name="bevel" value="1" />
		    <enum name="round" value="2" />
		</attr>
	</declare-styleable>
</resources>